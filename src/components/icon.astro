---
import icons from '@/assets/icons';

interface Props {
  icon: string;
  className?: string;
  attributes?: string;
}

const { icon, className, ...attributes } = Astro.props;

const svgIcon = icons.filter((i) => i.id === icon)[0];

if (svgIcon === undefined) {
  throw new Error(`Not found icon: ${icon}`);
}
---

<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" viewBox={svgIcon.viewBox} class={className} {...attributes}>
  {svgIcon.license}
  <path d={svgIcon.d}></path>
</svg>

<style>
  svg {
    display: inline;
    margin: 0 0.2em 0.3em;
    width: 1em;
    height: auto;
    color: currentColor;
    fill: currentColor;
  }
</style>
