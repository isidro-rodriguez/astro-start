---
import Layout from '@/layouts/Layout.astro';
import placeholder from '@/assets/images/placeholder.svg';
import { site } from '@/consts';
import { Image } from 'astro:assets';
import Icon from 'astro-icon';
---

<Layout>
  <main class="flex min-h-screen flex-col items-center justify-center">
    <h1 class="mb-8 mt-16 text-4xl font-bold">
      <Icon name="ph:house-duotone" class="mb-2 mr-2" />
      {site.title}
      <Icon name="ph:house-duotone" class="mb-2 ml-2" />
    </h1>
    <p class="mb-8 text-lg">
      {site.description}
    </p>
    <Image src={placeholder} alt="placeholder" class="rounded-2xl" />
  </main>
</Layout>

<script>
  import { main } from '@/assets/scripts/main';
  main();
</script>
